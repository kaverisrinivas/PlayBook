<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:scrollbars="vertical"
    android:isScrollContainer="true"
    android:overScrollMode="always"
    >

    <TextView
        android:id="@+id/text_view"
        android:layout_width="208dp"
        android:layout_height="76dp"
        android:layout_marginTop="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="Notes"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorPrimary"
        android:textScaleX="1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:drawableTint="@color/white"
        android:hint="@string/email"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6"
        android:textStyle="italic"
        android:focusable="true"
        android:imeOptions="actionDone"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:minLines="1"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_view"
        app:layout_constraintRight_toRightOf="@id/text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@id/text_view" />

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:drawableTint="@color/white"
        android:hint="@string/password"
        android:inputType="text"
        android:minLines="1"
        android:textColor="@color/black"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6"
        android:textStyle="italic"
        android:focusable="true"
        android:imeOptions="actionDone"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/edit_text"
        app:layout_constraintRight_toRightOf="@id/edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/signup"
        android:textColor="#ffff25e6"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/edit_text2"
        app:layout_constraintRight_toRightOf="@id/edit_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@id/edit_text2" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/edit_text2"
        app:layout_constraintRight_toRightOf="@id/edit_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@id/edit_text2" />

</androidx.constraintlayout.widget.ConstraintLayout>
